.gallery-and-buzz
  .container
    padding 0 0 150px
    text-align center
  
    .gallery-container
      height 1050px
      margin 0 auto
      width 1050px
      
      .gallery-item
        background-color $brand-primary
        border 2px solid $white
        box-sizing border-box
        color $white
        float left
        height 350px
        position relative
        width 350px
        
        &.image-item img
          width 100%
          height 100%
        
        &.quote-item
          padding 50px 20px
          
          img
            border 1px solid white
            border-radius 100px
            height 50px
            width 50px
          
          .username
            margin-top 10px
            margin-bottom 5px
            text-transform uppercase
          
          .quote
            font-size 24px
            font-size 1.2em
            line-height 1.3em
            
          .fa
            color darken($brand-primary, 10)
            font-size 28px
            position absolute
            right 15px
            top 15px