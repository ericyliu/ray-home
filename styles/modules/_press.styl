$text-color = #43484F

.press
  .container
    text-align center
    padding 120px 0 50px
    
  .reviews
    margin-top 30px
    
    .sources
      margin-bottom 50px
      height 20px
      
      .source
        box-sizing border-box
        float left
        width 20%
        height 100%
        
        img
          height 100%
    
    .review
      color $text-color
      font-size 28px
      font 300 1.4em/1.4em Roboto
      margin 0 auto
      max-width 700px

  .remote
    width 1000px
    height 200px
    margin 0 auto
    
    img
      float left
      width 100%