.container.background-video
  background-color $black
  color $white
  margin-top 60px
  padding 150px
  text-align center
  
  h1
    margin-top 0
    margin-bottom 10px
  
  .intro
    font-size 28px
    font-size 1.4em
    line-height 1.85em
    margin 0 auto
    max-width 650px

  .controls
    display inline-block
    margin-top 30px
    text-align center
    
    .btn
      display inline-block
      margin 0 10px
      position relative
      
      &.video
        padding-left 25px
         
        .fa
          background-color $brand-primary
          border-radius 100px
          font-size 9px
          height 20px
          left 10px
          line-height 20px
          position absolute
          top 10px
          width 20px