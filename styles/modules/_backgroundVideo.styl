.background-video
  background-color $black
  color $white
  margin-top 60px
  position relative
  text-align center
  overflow hidden

  video
    position absolute
    left 0
    top 0
    min-width 100%
    min-height 100%

  .container
    padding 200px 0
    position relative

    @media $tabletPortraitBreakpoint
      padding 100px 0

    .ces-logo
      position absolute
      width 75px
      top 10px
      right 10px

      img
        width 100%

    h1
      margin-top 0
      margin-bottom 20px

    .intro
      font-family Roboto
      font-weight 300
      font-size 28px
      font-size 1.4em
      line-height 1.55em
      margin 0 auto
      max-width 620px

      @media $mobileBreakpoint
        font-size 1.1em
        max-width 280px

    .controls
      display inline-block
      margin-top 30px
      text-align center

      .btn
        display inline-block
        margin 0 10px
        position relative

        @media $mobileBreakpoint
          display block
          margin 20px auto

        &.video
          padding-left 25px

          .fa
            border-radius 100px
            background-color $white
            color $brand-primary
            font-size 23px
            height 20px
            left 10px
            line-height 20px
            position absolute
            top 10px
            width 20px

  .fullscreen-video
    bottom 0
    display none
    left 0
    position fixed
    right 0
    top 0
    z-index 100

    .overlay
      background-color alpha($black, .8)
      cursor pointer
      position absolute
      height 100%
      width 100%

    .video-container
      box-sizing border-box
      cursor pointer
      left 50%
      top 50%
      transform translateY(-50%) translateX(-50%)
      position absolute
      width 90%
      height 90%

      iframe
        display block
        width 100%
        height 100%

    .fa-close
      cursor pointer
      position absolute
      font-size 1em
      top 10px
      right 10px

