.search-and-discovery
  height 1450px
  position relative
  .container
    .right-side-background
      background-color lighten($gray-light, 25)
      bottom 0
      left 50%
      position absolute
      right 0
      top 0
      
    .blurb
      position absolute
      width 300px
      height 400px
      left 50%

      &.left
        text-align right
        transform translateX(-550px)
        top 40px
        
        h2
          margin-left auto
          margin-right 0

      &.right
        bottom 40px
        transform translateX(250px)
        
      h2
        line-height 1.2em
        width 280px
        margin-bottom 15px
        
      p
        font-family HelveticaNeueLight
        margin-bottom 30px

    .phone
      position absolute
      height 600px
      width 380px
      left 50%
      
      img
        width 100%
      
      &.left
        top 300px
        transform translateX(-320px)
        
      &.right
        top 500px
        transform translateX(-50px)