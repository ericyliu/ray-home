.search-and-discovery
  height 1450px
  overflow hidden
  position relative

  @media $tabletPortraitBreakpoint
    height 1550px

  @media $mobileBreakpoint
    height 1800px

  .container
    .right-side-background
      background-color lighten($gray-light, 25)
      bottom 0
      left 50%
      position absolute
      right 0
      top 0

      @media $mobileBreakpoint
        left 0
        top 50%

    .blurb
      position absolute
      left 50%
      width 300px
      height 400px

      &.left
        text-align right
        top 40px
        transform translateX(-550px)

        @media $tabletLandscapeBreakpoint
          left 20px
          transform none

        @media $tabletPortraitBreakpoint
          left 50px

        @media $mobileBreakpoint
          position relative
          margin 0 auto
          left auto
          width 330px

        h2, p
          margin-left auto
          margin-right 0

        a
          margin-right 20px

      &.right
        bottom 40px
        transform translateX(250px)

        @media $tabletLandscapeBreakpoint
          left auto
          right 20px
          transform none

        @media $tabletPortraitBreakpoint
          right 50px

        @media $mobileBreakpoint
          width 330px

      h2
        line-height 1.2em
        width 280px
        margin-bottom 15px

        @media $mobileBreakpoint
          width 100%

      p
        font-family HelveticaNeueLight
        margin-bottom 30px

        @media $mobileBreakpoint
          width 90%

    .phone
      position absolute
      height 600px
      width 380px
      left 50%

      @media $mobileBreakpoint
        width 450px

      img
        width 100%

      &.left
        top 300px
        transform translateX(-320px)

        @media $tabletLandscapeBreakpoint
          top 350px
          transform translateX(-260px)

        @media $tabletPortraitBreakpoint
          top 400px

        @media $mobileBreakpoint
          transform translateX(-320px)

      &.right
        top 500px
        transform translateX(-50px)

        @media $tabletLandscapeBreakpoint
          top 450px
          transform translateX(-100px)

        @media $tabletPortraitBreakpoint
          top 500px
