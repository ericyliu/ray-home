.sales
  background $black url('../../assets/Ray_Bottom_Sales_BG.jpg') no-repeat
  background-size 1200px
  background-position 50% 0
  color $white

  .container
    padding 100px 0 50px
    position relative

    .blurb
      max-width 350px
      margin-left 60%
      margin-top 50px
      
      h1
        font 400 2.5em Roboto
        margin 0 0 20px
        
      p
        font 300 1.4em/1.4em Roboto
        margin 0 0 20px
    
    .ray-back-container
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      overflow hidden

      .ray-back
        position absolute
        left 50%
        bottom -300px
        width 400px
        transform translateX(-250px)
        
        img
          width 100%
      
    .ice-cream
      position absolute
      left -150px
      top -150px
      height 350px
      width 350px
      
      img
        width 100%