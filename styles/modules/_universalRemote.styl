.universal-remote
  background-color $brand-primary
  color $white
  text-align center
  
  .container
    padding 50px 0
    
    img.ray-stack
      height 400px
    
    h3
      margin 0
    
    p
      margin 0 auto 25px
      max-width 600px
      
    .device-finder-container
      background-color $white
      border-radius 5px
      box-sizing border-box
      color $black
      margin 20px auto 0
      max-width 850px
      padding 30px 0
      
      .devices
        border-bottom 1px solid $gray-light
        font-size 0
        padding 0 50px 50px
        text-align left

        .device
          display inline-block
          font-size 20px
          height 30px
          text-align center
          width 150px
          
          img
            height 25px

          .name
            font-size 12px
            font-size .6em
            font-weight bold
            line-height 1em
      
      .device-finder
        padding 50px 150px
        
        h3
          margin 0
        
        .input-container
          position relative
          margin 30px 0 40px
          
          input
            border 1px solid $gray-light
            box-sizing border-box
            padding 10px 5px
            width 100%
        
          .fa.fa-search
            color $gray-light
            font-size 18px
            font-size .9em
            position absolute
            right 12px
            top 8px

        a
          margin-top 0
