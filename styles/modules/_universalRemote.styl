.universal-remote
  background-color $brand-primary
  color $white
  text-align center
  
  .container
    padding 25px 0 50px
    
    img.ray-stack
      height 500px
    
    h2
      margin 0
    
    p
      margin 0 auto 25px
      max-width 600px
      
    .device-finder-container
      background-color $white
      border-radius 5px
      box-sizing border-box
      color $black
      margin 20px auto 0
      max-width 1000px
      padding 30px 0
      
      h3
        margin-bottom 20px
      
      .devices
        border-bottom 1px solid $gray-lighter
        font-size 0
        padding 0 50px 50px
        text-align left

        .device
          display inline-block
          font-size 20px
          height 30px
          text-align center
          width 20%
          
          .image-container
            height 50px
            margin-top 25px
          
          .name
            font-size 12px
            font .6em Roboto
            font-weight bold
            line-height 1em
      
      .device-finder
        padding 50px 150px
        
        h3
          margin 0
        
        .input-container
          position relative
          margin 30px 0 40px
          
          input
            font 100 1em Roboto
            border 1px solid $gray-light
            box-sizing border-box
            padding 10px 10px
            width 100%
        
          .fa.fa-search
            color $gray-light
            position absolute
            right 12px
            top 12px

        a
          margin-top 0
