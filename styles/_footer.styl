$alt-text-color = lighten($gray-light, 20)

.footer
  background-color $gray-light
  color $white
  height 350px
  
  .container
    padding 80px 30px
    position relative

    .footer-container
      float left
      
      .label
        color $alt-text-color
        text-transform uppercase
        
      a
        display block
        margin-top 15px
        
        .fa
          color $alt-text-color
          display inline-block
          font-size 16px
          font-size .8em
          margin-right 5px
          width 20px
      
      &.logo
        width 80px
        
        .logo
          background-color $white
          color $gray-light
          border-radius 100%
          width 60px
          height 60px
          text-align center
          font-size 22px
          font-size 1.1em
          line-height 57px
        
      &.company, &.orders, &.social
        width 20%
        
      &.contact
        width 30%
        
        .btn
          border-color $alt-text-color
          margin 20px 0 15px
          width 300px
          
        .left-container, .right-container
          float left
          width 50%
          
          div
            margin-top 10px
            
        .right-container
          color $alt-text-color
            
      &.social .subscribe
        margin-top 40px
        
.footer-bottom
  background-color $gray-dark
  color $white
  padding 40px 130px
  font-size 14px
  font-size .7em
  color $alt-text-color
  
  a
    border-left 1px solid $alt-text-color
    padding-left 15px
    margin-left 15px
