$alt-text-color = lighten($gray-light, 20)

.footer
  background-color $gray-light
  color $white
  height 350px

  @media $tabletLandscapeBreakpoint
    height 420px

  @media $tabletPortraitBreakpoint
    height 750px

  .container
    padding 80px 30px
    position relative

    @media $tabletPortraitBreakpoint
      padding 70px 0

    .footer-container
      float left
      text-align left

      .label
        font 500 .9em Roboto
        color $alt-text-color
        text-transform uppercase

      a
        font .8em Roboto
        display block
        margin-top 15px

        @media $tabletLandscapeBreakpoint
          margin-top 20px

        .fa
          color $alt-text-color
          display inline-block
          font-size 16px
          font-size .8em
          margin-right 5px
          width 20px

      &.logo
        width 80px

        @media $tabletPortraitBreakpoint
          position absolute
          left 50px
          top 50px

        .logo
          background-color $white
          color $gray-light
          border-radius 100%
          width 60px
          height 60px
          text-align center
          font-size 22px
          font-size 1.1em
          line-height 57px

      &.company, &.orders, &.social
        width 20%

        @media $tabletLandscapeBreakpoint
          width 50%

      @media $tabletPortraitBreakpoint
        &.company, &.social
          display inline-block
          float none
          width 50%
          vertical-align top

      &.contact
        width 30%

        .btn
          border-color $alt-text-color
          margin 20px 0 15px
          width 300px

          @media $tabletLandscapeBreakpoint
            width 270px

          @media $tabletPortraitBreakpoint
            width 100%

        .left-container, .right-container
          float left
          width 50%

          div
            margin-top 10px
            position relative

            .fa
              position absolute
              color $alt-text-color
              margin-left 5px
              left -23px
              top -7px

        .left-container
          font 400 .8em Roboto

        .right-container
          color $alt-text-color
          font 300 .8em Roboto

          @media $tabletPortraitBreakpoint
            box-sizing border-box
            padding-left 80px
            margin-top 0

      &.social .subscribe
        margin-top 53px

    @media $tabletLandscapeBreakpoint
      .left-footer-container
        box-sizing border-box
        display inline-block
        padding-left 20px
        width 50%
        vertical-align top

        .orders
          margin-top 20px

      .right-footer-container
        border-left 1px solid $alt-text-color
        box-sizing border-box
        display inline-block
        padding-left 50px
        padding-bottom 100px
        width 40%

        .contact
          width 100%

    @media $tabletPortraitBreakpoint
      .left-footer-container
        padding 0
        width 75%
        padding-left 25%

        .orders.hide-desktop
          display block
          width 100%
          margin-left 0%

      .right-footer-container
        border 0
        border-top 1px solid $alt-text-color
        margin-top 100px
        padding 50px 0 0
        width 100%
        text-align center

        .contact
          float none
          width 50%
          margin 0 auto

          .label
            text-align center

.footer-bottom
  background-color $gray-dark
  color $white
  padding 40px 130px
  font 300 .7em Roboto
  color $alt-text-color

  @media $tabletLandscapeBreakpoint
    background-color $gray-light
    padding 40px 130px 70px
    font-size .6em

  @media $tabletPortraitBreakpoint
    text-align center
    padding-bottom 100px

  a
    border-left 1px solid $alt-text-color
    padding-left 15px
    margin-left 15px
