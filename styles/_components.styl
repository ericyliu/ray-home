body
  font 20px HelveticaNeueLight
  
h1
  font-size 48px
  font-size 2.4em
  line-height 1.4em

h2
  font-size 42px
  font-size 2.1em
  line-height 2.5em
  
h3
  font-size 32px
  font-size 1.6em
  line-height 1.5em

a
  cursor pointer
  position relative

  &.text
    font-size 18px
    font-size .9em
    font-weight bold
    line-height 1em
  
  &.arrow
    display block
    text-transform uppercase
    
    &:after
      content: '>'
      margin-left 10px
      position absolute
      top -2px
  
  &.primary-color
     color $brand-primary
  
p
  font-size 18px
  font-size .9em
  line-height 1.4em
  
.container
  box-sizing border-box
  margin 0 auto
  max-width $maxWidthDesktop

.btn
  border 2px solid $brand-primary
  border-radius 4px
  box-sizing border-box
  color $brand-primary
  cursor pointer
  display block
  font-size .8em
  height 45px
  line-height 40px
  text-align center
  width 170px
  
  &:hover
    border-color lighten($brand-primary, 20)
    color lighten($brand-primary, 20)
    
  &.text-white
    color $white
  
  &.filled
    background-color $brand-primary
    color $white
    
    &:hover
      background-color lighten($brand-primary, 20)
